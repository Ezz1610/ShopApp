import Foundation
import FirebaseAuth
import FirebaseCore

final class FirebaseHelper {
    static let shared = FirebaseHelper()
    private init() {}

    // MARK: - Register User
    func register(
        firstName: String,
        lastName: String,
        email: String,
        password: String,
        completion: @escaping (Result<Void, Error>) -> Void
    ) {
        print("ğŸ“¨ [FirebaseHelper] Register started for \(email)")

        // ØªØ£ÙƒØ¯ Ø¥Ù† Firebase Ù…Ù‡ÙŠØ£
        guard FirebaseApp.app() != nil else {
            let err = NSError(domain: "FirebaseHelper", code: -10,
                              userInfo: [NSLocalizedDescriptionKey: "Firebase not configured properly."])
            print("ğŸ”´ FirebaseApp not configured.")
            completion(.failure(err))
            return
        }

        // Ø¥Ù†Ø´Ø§Ø¡ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù… ÙÙŠ Auth ÙÙ‚Ø·
        Auth.auth().createUser(withEmail: email, password: password) { authResult, error in
            if let error = error {
                print("ğŸ”´ Auth Error:", error.localizedDescription)
                completion(.failure(error))
                return
            }

            guard let user = authResult?.user else {
                completion(.failure(NSError(domain: "FirebaseHelper", code: 0,
                                            userInfo: [NSLocalizedDescriptionKey: "User creation failed."])))
                return
            }

            print("ğŸŸ¢ Firebase Auth user created with UID:", user.uid)

            // Ø¥Ø±Ø³Ø§Ù„ Ø¥ÙŠÙ…ÙŠÙ„ Ø§Ù„ØªØ­Ù‚Ù‚
            user.sendEmailVerification { emailError in
                if let emailError = emailError {
                    print("âš ï¸ Email verification failed:", emailError.localizedDescription)
                    completion(.failure(emailError))
                } else {
                    print("ğŸ“§ Verification email sent successfully to \(email).")
                    completion(.success(()))
                }
            }
        }
    }

    // MARK: - Login
    func login(email: String, password: String, completion: @escaping (Result<Bool, Error>) -> Void) {
        Auth.auth().signIn(withEmail: email, password: password) { authResult, error in
            if let error = error {
                completion(.failure(error))
            } else {
                let isVerified = authResult?.user.isEmailVerified ?? false
                completion(.success(isVerified))
            }
        }
    }

    // MARK: - Logout
    func logout() throws {
        try Auth.auth().signOut()
    }

    // MARK: - Current User
    func currentUser() -> User? {
        Auth.auth().currentUser
    }
}
