import SwiftUI


struct RegisterScreen: View {
    @EnvironmentObject var navigator: AppNavigator
    @StateObject private var viewModel = RegisterViewModel()

    var body: some View {
        ZStack {
            VStack(alignment: .center, spacing: 18) {
                // Header
                HStack {
                    Button(action: { navigator.goBack() }) {
                        Image(systemName: "chevron.left")
                            .font(.title2)
                            .foregroundColor(AppColors.primary)
                            .padding(.top, 8)
                    }
                    Spacer()
                }

                // Logo
                Image("appicon")
                    .resizable()
                    .scaledToFit()
                    .frame(width: 110, height: 110)
                    .padding(.top, 30)

                // Title
                Text("Create Account")
                    .font(.largeTitle)
                    .bold()
                    .padding(.top, 4)

                // Text Fields
                CustomTextField(iconName: "person", placeholder: "First Name", text: $viewModel.firstName, autoFocus: true)
                CustomTextField(iconName: "person", placeholder: "Last Name", text: $viewModel.lastName)
                CustomTextField(iconName: "envelope", placeholder: "Email", text: $viewModel.email, isEmailField: true)
                CustomTextField(iconName: "lock", placeholder: "Password", text: $viewModel.password, fieldType: .secure)
                CustomTextField(iconName: "lock", placeholder: "Confirm Password", text: $viewModel.confirmPassword, fieldType: .secure)

                // Register Button
                CustomButton(
                    title: viewModel.isLoading ? "Registering..." : "Register",
                    action: { viewModel.register() },
                    enabled: viewModel.canRegister && !viewModel.isLoading
                )

                Button("Already have an account? Login") {
                    navigator.goTo(.login)
                }
                .font(.footnote)
                .padding(.top, 8)

                Spacer()
            }
            .padding(.horizontal)
            .disabled(viewModel.isLoading)

            // Loading Overlay
            if viewModel.isLoading {
                ZStack {
                    Color.black.opacity(0.4)
                        .edgesIgnoringSafeArea(.all)
                    VStack(spacing: 12) {
                        ProgressView()
                            .progressViewStyle(CircularProgressViewStyle(tint: .white))
                            .scaleEffect(2)
                        Text("Please wait...")
                            .foregroundColor(.white)
                            .font(.headline)
                    }
                }
                .transition(.opacity)
                .animation(.easeInOut, value: viewModel.isLoading)
            }
        }
        // Alert
        .alert(isPresented: $viewModel.showAlert) {
            Alert(
                title: Text(viewModel.alertTitle),
                message: Text(viewModel.alertMessage),
                dismissButton: .default(Text("OK")) {
                    if viewModel.alertTitle == "Success" {
                        navigator.goTo(.login)
                    }
                }
            )
        }
    }
}
